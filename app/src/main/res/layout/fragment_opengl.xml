<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.demo.opengl.DisplayShapeView
        android:id="@+id/triangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:display_shape="triangle"
        app:layout_constraintBottom_toTopOf="@+id/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.demo.opengl.DisplayShapeView
        android:id="@+id/rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:display_shape="rectangle"
        app:layout_constraintBottom_toTopOf="@+id/pentagon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/triangle" />

    <com.demo.opengl.DisplayShapeView
        android:id="@+id/pentagon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:display_shape="pentagon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle" />

</androidx.constraintlayout.widget.ConstraintLayout>